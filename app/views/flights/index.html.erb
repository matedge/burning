<p id="notice"><%= notice %></p>

<h1>Listing Flights</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Origin</th>
      <th>Destination</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flights.each do |flight| %>
      <tr>
        <td><%= flight.date %></td>
        <td><%= flight.origin %></td>
        <td><%= flight.destination %></td>
        <td><%= link_to 'Show', flight %></td>
        <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
        <td><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<!-- create new flight. -->
<script id="newflightView" type="text/template">
  <h2>Create a new Flight</h2>
</script>

<!-- List of  the flights -->
<script id="flightListView" type="text/template">
      <h2>List of Flights:</h2>
      <table>
        <thead class="thead">
          <th>Date</th>
          <th>Flight</th>
          <th>From > To</th>
          <th>Plane</th>
          <th>Seats</th>
        </thead>
      </table>
</script>

